#!/bin/bash

set -e

if [[ "$LANGUAGE_VERSION" == "python2" ]]; then
    PIP="pip"
elif [[ "$LANGUAGE_VERSION" == "python3" ]]; then
    PIP="pip3"
else
    echo "A python version needs to be specified"
    exit 1
fi

if [ ! -d "dependencies" ]; then
    mkdir dependencies
fi

$PIP install -r requirements.txt --target=vendor

zip -r algorithm.zip .
