#!/bin/bash

set -e

# Modified from https://hub.docker.com/r/continuumio/anaconda/~/dockerfile/

apt-get -y update

# Install dependencies
apt-get install -u -y \
    bzip2 \
    wget \
    ca-certificates

# Install Anaconda for Python2
wget https://3230d63b5fc54e62148e-c95ac804525aac4b6dba79b00b39d1d3.ssl.cf1.rackcdn.com/Anaconda2-4.0.0-Linux-x86_64.sh
bash Anaconda2-4.0.0-Linux-x86_64.sh -b -p /opt/anaconda2
rm Anaconda2-4.0.0-Linux-x86_64.sh

/opt/anaconda2/bin/pip install --upgrade pip
/opt/anaconda2/bin/conda install --yes nomkl
/opt/anaconda2/bin/conda remove mkl mkl-service
/opt/anaconda2/bin/conda clean -ay
